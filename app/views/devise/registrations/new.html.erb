<div class="login">
  <div class="login-container">
    <h2>アカウント作成</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field login-field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前" %>
      </div>

      <div class="field login-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>

      <div class="field login-field">
        <% if @minimum_password_length %>
        <p class="password">パスワードは6文字以上入力してください</p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
      </div>

      <div class="field login-field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用パスワード" %>
      </div>

      <div class="actions">
        <%= f.submit "アカウント作成" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
